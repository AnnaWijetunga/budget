<% if @errors %>
  <p style="color: red;"><%= @errors %></p>
<% end %>

<h1>My Expenses</h1>
<br>
<br>

<h3>Hi, <%= current_user.username.capitalize %>!</h3>
<br>

<h4><ul>
  <% if @expenses.size > 0 %>
    <table class="table table-hover table-striped" >
    <tr class="info">
      <th><h4>Description</h4></th>
      <th><h4>Amount</h4></th>
      <th><h4>Date</h4></th>
      <th><h4></h4></th>
    </tr>
      <% current_user.expenses.each do |expense| %>
        <tr style="text-align:left;">
          <td><a href="expenses/<%= expense.id %>"><%= expense.description %></a></td>
          <td>$ <%= expense.total %></td>
          <td><%= expense.date %></td>
          <td><a href="expenses/<%= expense.id %>/edit">Edit</a></td>
        </tr>
      <% end %>
    </table>
    <br>
    <a href="/expenses/new">Create new expense</a>
    <br>
    <br>
  <% else %>
    Yes, so exciting! Click <a href="/expenses/new">here</a> to add your first expense.
  <% end %>
</ul></h4>