<h1>Create New Expense</h1>
<br>
<br>

<% if flash.has?(:message) %>
  <p style="color:#f73325;"><%= flash[:message] %> </p>
<% end %>

<h5><form action="/expenses" method="POST">
  <input type = "hidden" name="expense[user_id]" value=<%= current_user.id %> />
  
  <label for="vendor">Vendor: </label>
  <input type="text" name="expense[vendor]" id="vendor"/>

  <br>

  <label for="date">Date: </label>
  <input type="date" name="expense[date]" id="date"/>

  <br>

  <label for="total">Total:  $</label>
  <input type="number" name="expense[total]" id="total" min="0.01" step="0.01" max="9999999.99"/>

  <br>

  <label for="description">Description: </label>
  <input type="text" name="expense[description]" id="description"/>

  <br>

  <input type="submit" value="Create Expense"/>
</form></h5>