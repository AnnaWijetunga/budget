<h1>Expense Details</h1>

<br></br>

<h2><%= @expense.vendor %></h2>

<br>

<p><b>Date:</b> <%= @expense.date.strftime('%D') %></p>
<p><b>Total:</b> $<%= "%.2f" % @expense.total %></p>
<p><b>Description:</b> <%= @expense.description %></p>

<h5><form action="/expenses/<%= @expense.id %>/delete" method="POST">
  <input type="hidden" id="hidden" name="_method" value="DELETE"/>
  <input type="submit" value="Delete Expense">
</form></h5>
<br>

<p><a href="/expenses/<%= @expense.id %>/edit">Edit Expense</a></p>

