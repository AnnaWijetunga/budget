<% if @errors %>
  <p style="color: red;"><%= @errors %></p>
<% end %>

<h1>My Expenses</h1>
<br>
<br>

<h3>Welcome, <b><%= @current_user.username.capitalize%></b>!</h3>
<br>
<h5><ul>
  <% if @expenses.size > 0 %>
    <% @expenses.each do |expense| %>
      <% if expense.user_id == @current_user.id %>
        <li><a href="/expenses/<%= expense.id %>"><b><%= expense.vendor %></b></a> from <%= expense.date %> for $<%= "%.2f" % expense.total %></li>
        <br></br>
      <% end %>
    <% end %>
    <br>
    <a href="/expenses/new">Create new expense</a>
    <br>
    <br>
  <% else %>
    <p>You do not have expenses yet! <a href="/expenses/new">Create a new one here</a>.</p>
  <% end %>
</ul></h5>